#activate environment                     python 

import anndata as ad
import scanpy as sc
import celltypist
import numpy as np
import pandas as pd

adata = ad.read_h5ad('/filepath/raw_sc_data_24jul24.h5ad')   

markers = pd.read_csv("/filepath/unique_genes.csv")                       

marker_genes = markers['x'].unique()          
adata.var.index = adata.var['gene_name'] 

adata_filtered = adata[:, adata.var_names.isin(marker_genes)] adata_filtered.write_h5ad("filtered_adata.h5ad")
